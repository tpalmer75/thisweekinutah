.wrapper
	header
		h1 This week in Utah

	section
		h2.week-range {{ startFirstWeek.toISOString() | date : 'MMM dd' }}—{{ endFirstWeek.toISOString() | date : 'MMM dd' }}
		ul.event-list
			li(style="order: 1") Subscribe now
			li(ng-repeat="event in eventData | filterWeek : startFirstWeek : endFirstWeek" style="order: {{$index}}")
				.image-container
					img(ng-src="{{ event.image }}")
				.event-content
					h3 {{event.title}}
					span(ng-show="event.days") {{ event.days }}
					span {{event.startDate | date}}—{{event.endDate | date}}
					span {{event.startDate | date : 'h:mm'}}
